includes:
  - vendor/szepeviktor/phpstan-wordpress/extension.neon

parameters:
    level: 4
    paths:
        - app
        - bootstrap
        - functions.php
    excludePaths:
        - vendor
        - node_modules
    ignoreErrors:
        - '#WP_Term::\$cat_ID#'
    bootstrapFiles:
        - phpstan-bootstrap.php
    scanFiles:
        - vendor/php-stubs/wordpress-stubs/wordpress-stubs.php
    treatPhpDocTypesAsCertain: false